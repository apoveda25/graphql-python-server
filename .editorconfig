root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[*.graphql]
indent_size = 2

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.vue]
indent_size = 2

[*.jsx]
indent_size = 2

[*.html]
indent_size = 2

[*.py]
indent_size = 4

[*.php]
indent_size = 4
